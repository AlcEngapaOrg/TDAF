<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                   http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <!-- Accounting Properties -->
    <bean id="props" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="locations" value="conf/accounting.properties" />
    </bean>

    <context:property-placeholder properties-ref="props"/>

    <!-- Integration instance -->
    <bean id="myDb" class="com.mongodb.Mongo">
        <constructor-arg index="0" value="${mongo.host}"/>
    </bean>

    <bean id="jsonProcessor" class="es.tid.cloud.tdaf.accounting.persist.processor.JsonProcessor"/>

    <!-- Publish -->
    <bean id="accountingResource" class="es.tid.cloud.tdaf.accounting.rest.resources.AccountingResourceImpl">
        <constructor-arg ref="myDb"/>
    </bean>
</beans>
